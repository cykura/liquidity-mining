{
  "compilerOptions": {
    "target": "ES2015",
    "moduleResolution": "node",

    "strict": true,
    
    "esModuleInterop": true,
    "skipLibCheck": true,
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "lib": ["ES2019"],
    "importHelpers": true,
    "outDir": "dist/esm"
  },
  "include": ["src/"],
  "exclude": ["**/*.test.ts"]
}
